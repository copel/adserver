<h1>Listing publishers</h1>

<table>
  <thead>
    <tr>
      <th>Publisher id</th>
      <th>Publisher name</th>
      <th>Website</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Publisher type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.id %></td>
        <td><%= publisher.publisher_name %></td>
        <td><%= publisher.website %></td>
        <td><%= publisher.email %></td>
        <td><%= publisher.contact %></td>
        <td><%= publisher.publisher_type %></td>
        <td><%= link_to 'Show', publisher %></td>
        <td><%= link_to 'Edit', edit_publisher_path(publisher) %></td>
        <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

